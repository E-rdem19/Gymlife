    Layout = null; // Eğer bir _Layout.cshtml kullanacaksan bunu güncelleyebilirsin
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Gym Template">
    <meta name="keywords" content="Gym, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Gym | Template</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,500,600,700&display=swap" rel="stylesheet">

    <!-- CSS Styles -->
    <link rel="stylesheet" href="@Url.Content("~/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/font-awesome.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/flaticon.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/owl.carousel.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/barfiller.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/magnific-popup.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/slicknav.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
</head>

<body>
    <!-- Page Preloader -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="canvas-close">
            <i class="fa fa-close"></i>
        </div>
        <div class="canvas-search search-switch">
            <i class="fa fa-search"></i>
        </div>
        <nav class="canvas-menu mobile-menu">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li><a asp-controller="About" asp-action="Index">Hakkımızda</a></li>
                <li><a asp-controller="Classes" asp-action="Index">Dersler</a></li>
                <li><a asp-controller="Service" asp-action="Index">Hizmetler</a></li>
                <li><a asp-controller="Team" asp-action="Index">Ekibimiz</a></li>
                <li>
                    <a href="#">Sayfalar</a>
                    <ul class="dropdown">
                        <li><a asp-controller="About" asp-action="Index">Hakkımızda</a></li>
                        <li><a asp-controller="Classes" asp-action="Index">Dersler</a></li>
                        <li><a asp-controller="BMI" asp-action="Index">Bmi hesapla</a></li>
                        <li><a asp-controller="Team" asp-action="Index">Ekibimiz</a></li>
                        <li><a asp-controller="Gallery" asp-action="Index">Galeri</a></li>
                        <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li><a asp-controller="Home" asp-action="Error404">404</a></li>
                    </ul>
                </li>
                <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="canvas-social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-youtube-play"></i></a>
            <a href="#"><i class="fa fa-instagram"></i></a>
        </div>
    </div>
    <!-- Offcanvas Menu End -->

    <!-- Header Begin -->
    <header class="header-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="@Url.Content("~/img/logo.png")" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="nav-menu">
                        <ul>
                            <li class="active"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                            <li><a asp-controller="About" asp-action="Index">Hakkımızda</a></li>
                            <li><a asp-controller="Classes" asp-action="Index">Dersler</a></li>
                            <li><a asp-controller="Service" asp-action="Index">Hizmetler</a></li>
                            <li><a asp-controller="Team" asp-action="Index">Ekibimiz</a></li>
                            <li>
                                <a href="#">Sayfalar</a>
                                <ul class="dropdown">
                                    <li><a asp-controller="About" asp-action="Index">Hakkımızda</a></li>
                                    <li><a asp-controller="Classes" asp-action="Index">Dersler</a></li>
                                    <li><a asp-controller="BMI" asp-action="Index">Bmi hesapla</a></li>
                                    <li><a asp-controller="Team" asp-action="Index">Ekibimiz</a></li>
                                    <li><a asp-controller="Gallery" asp-action="Index">Galeri</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                                    <li><a asp-controller="Home" asp-action="Error404">404</a></li>
                                </ul>
                            </li>
                            <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="top-option">
                        <div class="to-search search-switch">
                            <i class="fa fa-search"></i>
                        </div>
                        <div class="to-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="canvas-open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header End -->

    <!-- Main Content -->
    @RenderBody()

    <!-- Footer Begin -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="copyright-text">
                        <p>Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | Template by <a href="https://colorlib.com" target="_blank">Colorlib</a></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer End -->

    <!-- JS Plugins -->
    <script src="@Url.Content("~/js/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.magnific-popup.min.js")"></script>
    <script src="@Url.Content("~/js/masonry.pkgd.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.barfiller.js")"></script>
    <script src="@Url.Content("~/js/jquery.slicknav.js")"></script>
    <script src="@Url.Content("~/js/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/js/main.js")"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>